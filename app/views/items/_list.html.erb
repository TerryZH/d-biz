<div class="d-table">

<ul class="th">

  <li><%= I18n.t 'views.items.index.product' %></li>
  <li><%= I18n.t 'views.items.index.number' %></li>
  <li><%= I18n.t 'views.items.index.discount' %></li>
  <li></li>
  <li></li>
</ul>

<% unless @items.empty? %>

  <% @items.each do |delivery, items| %>
    <% a = Address.find(Delivery.find(delivery).ship_to_id) %>
    <% items.each do |item| %>
    <ul>
      <li><%= Product.find(item.product_id).name %> </li>
      <li><%= (item.number*50).round(2) %></li>
      <li><%= item.discount %></li>
      <li><%= link_to I18n.t('views.edit'), "#" %></li>
    </ul>
    <% end %>
    <ul> <%= (I18n.t 'views.items.index.delivery_to') % {:address=>a.region+a.location} %> </ul>
  <% end %>

<% end %>

</div>

