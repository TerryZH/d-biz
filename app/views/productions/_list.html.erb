<div class="d-table">

<ul class="th">
  <li><%= I18n.t 'views.productions.index.when' %></li>
  <li><%= I18n.t 'views.productions.index.who' %></li>
  <li><%= I18n.t 'views.productions.index.what' %></li>
  <li><%= I18n.t 'views.productions.index.number' %></li>
  <li></li>
  <li></li>
</ul>

<% unless @productions.empty? %>

  <% @productions.each do |production| %>
    <ul>
      <li><%= production.when %></li>
      <li><%= Worker.find(production.who_id).name %></li>
      <li><%= Product.find(production.what_id).name %></li>
      <li><%= production.number %></li>
      <li><%= link_to I18n.t('views.delete'), {:controller=>"productions", :action=>"delete",:id=>production}, :class=>"delete"%></li>
      <li><%= link_to I18n.t('views.edit'), "#" %></li>
    </ul>
  <% end %>

<% end %>

</div>

<%= paginate @productions %>


